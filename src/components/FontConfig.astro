<style is:global>
    /* nerd fonts */
    @import "https://www.nerdfonts.com/assets/css/webfont.css";

    @font-face {
        font-family: "Satoshi";
        src:
            url("../assets/fonts/Satoshi/Satoshi-Regular.woff2") format("woff2"),
            url("../assets/fonts/Satoshi/Satoshi-Regular.woff") format("woff"),
            url("../assets/fonts/Satoshi/Satoshi-Regular.ttf2")
                format("truetype");
        font-weight: 400;
        font-display: swap;
        font-style: normal;
    }

    @font-face {
        font-family: "Stardom";
        src:
            url("../assets/fonts/Stardom/Stardom-Regular.woff2") format("woff2"),
            url("../assets/fonts/Stardom/Stardom-Regular.woff") format("woff"),
            url("../assets/fonts/Stardom/Stardom-Regular.ttf2")
                format("truetype");
        font-weight: 400;
        font-display: swap;
        font-style: normal;
    }

    @font-face {
        font-family: "Libre Baskerville";
        font-style: normal;
        font-display: swap;
        font-weight: 400;
        src:
            url(https://cdn.jsdelivr.net/fontsource/fonts/libre-baskerville@latest/latin-400-normal.woff2)
                format("woff2"),
            url(https://cdn.jsdelivr.net/fontsource/fonts/libre-baskerville@latest/latin-400-normal.woff)
                format("woff");
        unicode-range:
            U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
            U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191,
            U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }

    :root {
        /* @link https://utopia.fyi/type/calculator?c=320,18,1.2,1920,20,1.333,5,2,&s=0.75|0.5|0.25,1.5|2|3|4|6,s-l&g=s,l,xl,12 */

        --step--2: clamp(0.7035rem, 0.7968rem + -0.0778vw, 0.7813rem);
        --step--1: clamp(0.9375rem, 0.9375rem + 0.0002vw, 0.9377rem);
        --step-0: clamp(1.125rem, 1.1rem + 0.125vw, 1.25rem);
        --step-1: clamp(1.35rem, 1.2868rem + 0.3163vw, 1.6663rem);
        --step-2: clamp(1.62rem, 1.4998rem + 0.6011vw, 2.2211rem);
        --step-3: clamp(1.944rem, 1.7407rem + 1.0167vw, 2.9607rem);
        --step-4: clamp(2.3328rem, 2.01rem + 1.6139vw, 3.9467rem);
        --step-5: clamp(2.7994rem, 2.3071rem + 2.4615vw, 5.2609rem);

        --main-heading-font-family: "Satoshi";
        --alt-heading-font-family: "Stardom";
        --body-font-family: "Libre Baskerville";
    }

    h1 {
        font-size: var(--step-5);
        font-family: var(--main-heading-font-family);
        margin: 0px;
    }

    h2 {
        font-size: var(--step-4);
        font-family: var(--main-heading-font-family);
    }

    h3 {
        font-size: var(--step-3);
        font-family: var(--main-heading-font-family);
    }

    h4 {
        font-size: var(--step-2);
        font-family: var(--alt-heading-font-family);
    }

    h5 {
        font-size: var(--step-1);
        font-family: var(--alt-heading-font-family);
    }

    h6 {
        font-size: var(--step-0);
        font-family: var(--alt-heading-font-family);
    }

    p {
        font-size: var(--step-0);
        font-family: var(--body-font-family);
    }

    a {
        font-size: var(--step-0); /* just to be sure */
        text-decoration: underline;
        text-decoration-thickness: 2px;
        text-decoration-color: var(--accent);
        color: inherit;
        transition-duration: 0.125s;
        text-decoration-skip-ink: auto;
    }

    a:hover {
        text-decoration-thickness: calc(2px + 0.075em);
    }

    ::selection {
        background: var(--primary);
        color: var(--background);
        text-decoration-color: var(--background);
    }
</style>
